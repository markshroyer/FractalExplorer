<UserControl x:Class="FractalExplorer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="600" d:DesignWidth="800">
	
   	<UserControl.Resources>
        <Style TargetType="Grid" x:Key="dropShadowStyle">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Direction="270" Opacity="0.4" ShadowDepth="3" />
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="14" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <Grid
            Canvas.ZIndex="100"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Background="White"
            Style="{StaticResource dropShadowStyle}">
            
            <TextBlock
                Text="Fractal Explorer"
                FontFamily="Georgia"
                FontSize="18"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Padding="4"
                />
            
        </Grid>
        
        <Image
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Center"
            Name="fractalImage"
            Stretch="UniformToFill"
            VerticalAlignment="Center"
            />
        
        <Button
            Grid.Row="1"
            Grid.Column="1"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            />
        
        <TextBlock 
            Grid.Row="1"
            Grid.Column="2"
            Text="foo"
            />
    </Grid>
</UserControl>
